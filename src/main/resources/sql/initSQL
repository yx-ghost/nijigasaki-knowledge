CREATE TABLE `article` (
  `id` bigint NOT NULL,
  `created_by` varchar(255) DEFAULT NULL COMMENT '创建人',
  `create_time` datetime DEFAULT NULL COMMENT '创建时间',
  `update_by` varchar(255) DEFAULT NULL COMMENT '更新人',
  `remark` varchar(255) DEFAULT NULL COMMENT '备注',
  `status` tinyint DEFAULT '1' COMMENT '可用状态，1-可用，0-不可用\n',
  `author_name` varchar(255) NOT NULL COMMENT '作者',
  `title` varchar(255) NOT NULL COMMENT '标题',
  `visibility` int NOT NULL COMMENT '隐私权限',
  `article_status` int NOT NULL DEFAULT '0' COMMENT '文章状态',
  `collection_id` int DEFAULT NULL COMMENT '合集id',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='文章表'

CREATE TABLE `article_content` (
  `article_id` bigint NOT NULL COMMENT '文章id',
  `content` text COMMENT '文章内容\n'
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='文章详情表'

CREATE TABLE `article_type` (
  `id` bigint NOT NULL,
  `article_id` bigint DEFAULT NULL,
  `article_type_name` varchar(255) NOT NULL COMMENT '类型名称',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='文章类型'

CREATE TABLE `comment` (
  `id` bigint NOT NULL,
  `username` varchar(255) NOT NULL COMMENT '评论用户',
  `article_id` bigint NOT NULL COMMENT '文章id',
  `content` varchar(255) DEFAULT NULL COMMENT '评论内容',
  `parent_id` bigint DEFAULT NULL COMMENT '父评论id',
  `create_time` datetime NOT NULL COMMENT '评论时间',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='评论表'

CREATE TABLE `favorite` (
  `id` bigint NOT NULL,
  `username` varchar(255) NOT NULL COMMENT '用户',
  `article_id` bigint NOT NULL COMMENT '文章id',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='收藏表'

CREATE TABLE `follow` (
  `id` bigint NOT NULL,
  `username` varchar(255) NOT NULL COMMENT '关注者',
  `follow_name` varchar(255) NOT NULL COMMENT '被关注者',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='关注表'

CREATE TABLE `group` (
  `id` bigint NOT NULL,
  `created_by` varchar(255) NOT NULL COMMENT '创建人',
  `create_time` datetime DEFAULT NULL,
  `update_by` varchar(255) DEFAULT NULL,
  `update_time` datetime DEFAULT NULL,
  `remark` varchar(255) NOT NULL,
  `status` tinyint NOT NULL DEFAULT '1',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='群组'

CREATE TABLE `group_member` (
  `group_id` bigint DEFAULT NULL,
  `username` varchar(255) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='群组成员表'

CREATE TABLE `like` (
  `id` bigint NOT NULL,
  `username` varchar(255) NOT NULL COMMENT '点赞用户',
  `article_id` bigint DEFAULT NULL COMMENT '被点赞文章',
  `comment_id` bigint DEFAULT NULL COMMENT '被点赞评论',
  `create_time` datetime DEFAULT NULL,
  `status` int NOT NULL DEFAULT '1',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3

CREATE TABLE `subscription` (
  `id` bigint NOT NULL,
  `username` varchar(255) NOT NULL,
  `collection_id` bigint NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COMMENT='订阅表'

CREATE TABLE `tag` (
  `id` bigint NOT NULL,
  `article_id` bigint NOT NULL,
  `name` varchar(50) NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3

CREATE TABLE `user` (
  `id` bigint NOT NULL,
  `create_by` varchar(255) DEFAULT NULL,
  `create_time` datetime DEFAULT NULL,
  `update_by` varchar(255) DEFAULT NULL,
  `update_time` datetime DEFAULT NULL,
  `remark` varchar(55) DEFAULT NULL,
  `status` int DEFAULT NULL,
  `username` varchar(255) DEFAULT NULL,
  `password` varchar(255) DEFAULT NULL,
  `nickname` varchar(255) DEFAULT NULL,
  `phone` varchar(11) DEFAULT NULL,
  `avatar` varchar(255) DEFAULT NULL,
  `signature` varchar(255) DEFAULT NULL,
  `space_cover` varchar(255) DEFAULT NULL,
  `is_admin` tinyint(1) NOT NULL DEFAULT '0',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3

